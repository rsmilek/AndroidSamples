<resources>

  <!-- App styling -->

  <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="MyTheme.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="MyTheme.NoActionBar" parent="MyTheme.Base.NoActionBar">
  </style>

  <style name="MyTheme.Splash" parent ="MyTheme.Base.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBar">true</item>
  </style>

  <!-- Widget styling -->

  <style name="Widget" />

  <style name="button_text" parent="@android:style/Widget.Button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/splash_background</item>
    <item name="android:shadowColor">#FFFFFF</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">0</item>
    <item name="android:shadowRadius">0</item>
    <item name="android:textSize">22dp</item>
    <item name="android:background">@drawable/red_button</item>
  </style>

</resources>
